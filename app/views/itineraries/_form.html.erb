<%= form_for [@trip, @trip_itinerary, @trip_itinerary_city] do |f| %>
 
  <div class="form-group">
    <%= f.label :city_name %> 
    <%= f.text_field :city_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :region_name %> 
    <%= f.text_field :region_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country_name %> 
    <%= f.text_field :country_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %> 
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %> 
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <br />
  
  <div class="form-group">
    <%= f.submit "Create Itinerary", class: "btn btn-outline-success btn-block" %>
  </div>
<% end %>

<%= form_for @trip do |f| %>
  <div class="form-group">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :total_cost %>
    <%= f.number_field :total_cost, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :funds_deadline %>
    <%= f.date_field :funds_deadline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :trip_start_date %>
    <%= f.date_field :trip_start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :trip_end_date %>
    <%= f.date_field :trip_end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :group_id %>
    <%= f.select :group_id, options_for_select(@groups), :include_blank => true, class: "form-control" %>
  </div>


  <br />
  
  <div class="form-group">
    <%= f.submit "Save Trip", class: "btn btn-outline-success btn-block" %>
  </div>
<% end %>
